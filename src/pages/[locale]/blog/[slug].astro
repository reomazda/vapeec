---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { getI18n, getLocaleFromParams } from '@/i18n/utils'
export async function getStaticPaths() { return [] }
const locale = getLocaleFromParams(Astro.params)
const { t } = getI18n(locale)
const { slug } = Astro.params
---

<BaseLayout title={`${slug} | ${t('common','siteName')}`}>
  <article class="prose">
    <h1>{slug}</h1>
    <p>Post content coming soon.</p>
  </article>
</BaseLayout>
