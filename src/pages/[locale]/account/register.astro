---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { getI18n, getLocaleFromParams } from '@/i18n/utils'
const locale = getLocaleFromParams(Astro.params)
const { t } = getI18n(locale)
import AuthForm from '@/components/shared/AuthForm'
---

<BaseLayout title={`Register | ${t('common','siteName')}`}>
  <h1 class="text-2xl font-semibold mb-4">Create Account</h1>
  <AuthForm client:load mode="register" labels={{
    email: 'Email', password: 'Password', firstName: 'First name', lastName: 'Last name', submit: 'Register', switchTo: 'Login', success: 'Registered'
  }} />
  <p class="mt-4 text-sm text-gray-600"><a class="underline" href={`/${locale}/account/login`}>Login</a></p>
  
</BaseLayout>
